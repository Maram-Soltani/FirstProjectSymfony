{% block body %}
<style>
    body {
        font-family: "Poppins", Arial, sans-serif;
        background-color: #fdfaff; /* fond lavande clair */
        padding: 40px;
        color: #333;
    }

    h1 {
        text-align: center;
        color: #9370db; /* violet lavande */
        margin-bottom: 30px;
        font-size: 32px;
        font-weight: 600;
    }

    /* ðŸŒ¸ Tableau principal */
    table {
        width: 85%;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(150, 120, 200, 0.15);
    }

    /* En-tÃªte */
    table tr:first-child {
        background-color: #d1b3ff; /* violet pastel */
        color: white;
        text-align: left;
        font-weight: 600;
    }

    table th, table td {
        padding: 14px 20px;
        border-bottom: 1px solid #f0e6ff;
    }

    table tr:hover:not(:first-child) {
        background-color: #f9f5ff; /* survol violet clair */
        transition: background-color 0.3s ease;
    }

    /* ðŸ§® Compteur */
    .counter {
        text-align: center;
        margin-top: 30px;
        font-size: 18px;
        color: #6a1b9a;
    }

    .counter p {
        background-color: #f8f4ff;
        display: inline-block;
        padding: 10px 20px;
        margin: 8px;
        border-radius: 10px;
        box-shadow: 0 3px 8px rgba(150, 120, 200, 0.1);
    }

    /* ðŸ”´ Message si vide */
    .no-books {
        text-align: center;
        color: #d63384;
        font-weight: bold;
        background-color: #fff0f6;
        width: 50%;
        margin: 30px auto;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(200, 150, 200, 0.1);
    }
</style>

