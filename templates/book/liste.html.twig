{% block body %}
<style>
    body {
        font-family: "Poppins", Arial, sans-serif;
        background-color: #fdfaff;
        padding: 40px;
        color: #333;
    }

    h1 {
        text-align: center;
        color: #9370db;
        margin-bottom: 20px;
        font-size: 32px;
        font-weight: 600;
    }

    .search-box {
        text-align: center;
        margin-bottom: 30px;
    }

    .search-box input {
        padding: 10px 15px;
        width: 250px;
        border: 2px solid #d1b3ff;
        border-radius: 10px;
        outline: none;
        transition: 0.3s;
        font-size: 15px;
    }

    .search-box input:focus {
        border-color: #9370db;
        box-shadow: 0 0 5px rgba(147,112,219,0.5);
    }

    .search-box button {
        padding: 10px 20px;
        background-color: #9370db;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        margin-left: 10px;
        font-size: 15px;
        transition: background-color 0.3s, transform 0.2s;
    }

    .search-box button:hover {
        background-color: #b58ef5;
        transform: scale(1.05);
    }

    table {
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(150, 120, 200, 0.15);
    }

    table tr:first-child {
        background-color: #d1b3ff;
        color: white;
        text-align: left;
        font-weight: 600;
    }

    table th, table td {
        padding: 14px 20px;
        border-bottom: 1px solid #f0e6ff;
    }

    table tr:hover:not(:first-child) {
        background-color: #f9f5ff;
        transition: background-color 0.3s ease;
    }

    .btn {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        color: white;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: 0.3s;
        margin-right: 5px;
    }

    td .btn { margin-right: 5px; }

    .btn-edit { background-color: #9370db; }
    .btn-edit:hover { background-color: #b58ef5; }
    .btn-view { background-color: #6a1b9a; }
    .btn-view:hover { background-color: #9b5de5; }
    .btn-delete { background-color: #ff6b6b; }
    .btn-delete:hover { background-color: #e74c4c; }
    .btn-add { background-color: #5dade2; margin-top: 20px; }
    .btn-add:hover { background-color: #3498db; transform: scale(1.03); }

    .counter {
        text-align: center;
        margin-top: 30px;
        font-size: 18px;
        color: #6a1b9a;
    }

    .counter p {
        background-color: #f8f4ff;
        display: inline-block;
        padding: 10px 20px;
        margin: 8px;
        border-radius: 10px;
        box-shadow: 0 3px 8px rgba(150, 120, 200, 0.1);
    }

    .no-books {
        text-align: center;
        color: #d63384;
        font-weight: bold;
        background-color: #fff0f6;
        width: 50%;
        margin: 30px auto;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(200, 150, 200, 0.1);
    }

    @media (max-width: 768px) {
        table { width: 100%; }
        .btn { padding: 8px 12px; font-size: 0.9em; }
        .search-box input { width: 180px; }
    }
</style>

<h1>Liste des livres</h1>

<!--  Ajout du nombre de livres Romance -->
<div style="margin: 20px auto; background-color: #f8f4ff; padding: 15px; border-radius: 12px; text-align:center; box-shadow: 0 3px 8px rgba(150, 120, 200, 0.1); width: fit-content;">
    <h2 style="color:#9370db;">üíú Nombre de livres de cat√©gorie "Romance"</h2>
    <p style="font-size:18px;">Il y a <strong>{{ romanceCount }}</strong> livre(s) dans la cat√©gorie <em>Romance</em>.</p>
</div>

<!-- üîπ Filtre par dates -->
<div class="search-box" style="margin-bottom:15px;">
    <form method="get" action="{{ path('books_between_dates') }}">
        <input type="date" name="start" value="{{ startDate ?? '' }}" required>
        <input type="date" name="end" value="{{ endDate ?? '' }}" required>
        <button type="submit">üìÖ Filtrer par date</button>
    </form>
</div>
{% if authorsFiltered is defined and authorsFiltered %}
    <div style="margin:20px auto; text-align:center; background-color:#f8f4ff; padding:15px; border-radius:12px; width:fit-content; box-shadow:0 3px 8px rgba(150,120,200,0.1);">
        <h2 style="color:#9370db;">Auteurs avec {{ min }} √† {{ max }} livres</h2>
        <ul style="list-style:none; padding:0; margin:0;">
            {% for author in authorsFiltered %}
                <li>{{ author.username }} ({{ author.nbBooks }} livres)</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
{% if sortedByAuthor is defined and sortedByAuthor %}
    <p style="text-align:center; color:#9370db; font-weight:500; margin-bottom:15px;">
        üìñ Liste tri√©e par auteur
    </p>
{% endif %}

<div class="search-box">
    <form method="get" action="{{ path('liste_books') }}">
        <input type="text" name="ref" placeholder="üîç Rechercher par r√©f√©rence..." value="{{ ref ?? '' }}">
        <button type="submit">Rechercher</button>
    </form>
</div>

{% if books is empty %}
    <p class="no-books">Aucun livre trouv√© üìö</p>
{% else %}
<table>
    <tr>
        <th>Titre</th>
        <th>Date de publication</th>
        <th>Publi√©</th>
        <th>Cat√©gorie</th>
        <th>Auteur</th>
        <th>Actions</th>
    </tr>
    {% for book in books %}
    <tr>
        <td>{{ book.title }}</td>
        <td>{{ book.publicationDate ? book.publicationDate|date('d/m/Y') : '' }}</td>
        <td>{{ book.published ? 'Oui' : 'Non' }}</td>
        <td>{{ book.category }}</td>
        <td>{{ book.author.username }}</td>
        <td>
            <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-edit">‚úèÔ∏è Modifier</a>
            <a href="{{ path('showbook', {'id': book.id}) }}" class="btn btn-view">üëÅÔ∏è Voir</a>
            <a href="{{ path('deletebook', {'id': book.id}) }}" class="btn btn-delete" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce livre ?');">üóëÔ∏è Supprimer</a>
        </td>
    </tr>
    {% endfor %}
</table>

<div class="counter">
    <p>üìò Livres publi√©s : {{ countPublished }}</p>
    <p>üìï Livres non publi√©s : {{ countUnpublished }}</p>
    <p>üìö Total : {{ books|length }}</p>
</div>

<div style="text-align:center; margin-top:20px;">
    <a href="{{ path('books_by_author') }}" class="btn btn-add" style="background-color:#b19cd9;">
        üìñ Trier par auteur
    </a>
    <a href="{{ path('book_add') }}" class="btn btn-add">
        ‚ûï Cr√©er nouveau
    </a>
</div>
{% endif %}
{% endblock %}
