{% block body %}
<style>
    body {
        font-family: "Poppins", Arial, sans-serif;
        background-color: #fdfaff;
        padding: 40px;
        color: #333;
    }

    h1 {
        text-align: center;
        color: #9370db;
        margin-bottom: 30px;
        font-size: 32px;
        font-weight: 600;
    }

    table {
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(150, 120, 200, 0.15);
    }

    table tr:first-child {
        background-color: #d1b3ff;
        color: white;
        text-align: left;
        font-weight: 600;
    }

    table th, table td {
        padding: 14px 20px;
        border-bottom: 1px solid #f0e6ff;
    }

    table tr:hover:not(:first-child) {
        background-color: #f9f5ff;
        transition: background-color 0.3s ease;
    }

    .btn {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        color: white;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: 0.3s;
        margin-right: 5px;
    }
    td .btn {
    margin-right: 5px; /* espace entre les boutons */
}
    .btn-edit { background-color: #9370db; }
    .btn-edit:hover { background-color: #b58ef5; }
    .btn-view { background-color: #6a1b9a; }
    .btn-view:hover { background-color: #9b5de5; }
    .btn-delete { background-color: #ff6b6b; }
    .btn-delete:hover { background-color: #e74c4c; }
    .btn-add { background-color: #5dade2; margin-top: 20px; }
    .btn-add:hover { background-color: #3498db;transform: scale(1.03); }

    .counter {
        text-align: center;
        margin-top: 30px;
        font-size: 18px;
        color: #6a1b9a;
    }

    .counter p {
        background-color: #f8f4ff;
        display: inline-block;
        padding: 10px 20px;
        margin: 8px;
        border-radius: 10px;
        box-shadow: 0 3px 8px rgba(150, 120, 200, 0.1);
    }

    .no-books {
        text-align: center;
        color: #d63384;
        font-weight: bold;
        background-color: #fff0f6;
        width: 50%;
        margin: 30px auto;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(200, 150, 200, 0.1);
    }

    @media (max-width: 768px) {
        table { width: 100%; }
        .btn { padding: 8px 12px; font-size: 0.9em; }
    }
</style>

<h1>Liste des livres</h1>

{% if books is empty %}
    <p class="no-books">Aucun livre trouv√© üìö</p>
{% else %}
<table>
    <tr>
        <th>Titre</th>
        <th>Date de publication</th>
        <th>Publi√©</th>
        <th>Cat√©gorie</th>
        <th>Auteur</th>
        <th>Actions</th>
    </tr>
    {% for book in books %}
    <tr>
        <td>{{ book.title }}</td>
        <td>{{ book.publicationDate ? book.publicationDate|date('d/m/Y') : '' }}</td>
        <td>{{ book.published ? 'Oui' : 'Non' }}</td>
        <td>{{ book.category }}</td>
        <td>{{ book.author.username }}</td>
        <td>
            <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-edit">‚úèÔ∏è Modifier</a>
            <a href="{{ path('showbook', {'id': book.id}) }}" class="btn btn-view">üëÅÔ∏è Voir</a>
            <a href="{{ path('deletebook', {'id': book.id}) }}" class="btn btn-delete" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce livre ?');">üóëÔ∏è Supprimer</a>
        </td>
    </tr>
    {% endfor %}
</table>

<div class="counter">
    <p>üìò Livres publi√©s : {{ countPublished }}</p>
    <p>üìï Livres non publi√©s : {{ countUnpublished }}</p>
    <p>üìö Total : {{ books|length }}</p>
</div>

<a href="{{ path('book_add') }}" class="btn btn-add">‚ûï Cr√©er nouveau</a>
{% endif %}
{% endblock %}
