{% extends 'base.html.twig' %}

{% block title %}Ajouter un auteur{% endblock %}

{% block body %}
<style>
    body {
        background-color: #fdfaff; /* violet très clair, fond doux */
        font-family: 'Poppins', sans-serif;
    }

    .container-form {
        max-width: 500px;
        margin: 70px auto;
        background: #ffffff; /* carte blanche */
        padding: 35px 40px;
        border-radius: 15px;
        box-shadow: 0 6px 14px rgba(150, 120, 200, 0.15);
    }

    .container-form h1 {
        text-align: center;
        color: #9370db; /* lavande claire */
        margin-bottom: 25px;
        font-weight: 600;
    }

    label {
        display: block;
        font-weight: 500;
        color: #555;
        margin-bottom: 6px;
    }

    input[type="text"],
    input[type="email"] {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #faf7ff; /* lavande très claire */
        transition: all 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="email"]:focus {
        border-color: #c9a6ff;
        background-color: #f4edff;
        outline: none;
    }

    .form-error {
        color: #d9534f;
        font-size: 0.9em;
        margin-bottom: 10px;
    }

    button,
    input[type="submit"] {
        background-color: #d1b3ff; /* violet pastel clair */
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        cursor: pointer;
        width: 100%;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    button:hover,
    input[type="submit"]:hover {
        background-color: #b892ff;
        transform: scale(1.03);
    }
</style>

<div class="container-form">
    <h1>Ajouter un auteur</h1>

    {{ form_start(formulaire) }}

    <label for="email">Email</label>
    {{ form_widget(formulaire.email, {'attr': {'class': 'form-control'}}) }}
    <div class="form-error">{{ form_errors(formulaire.email) }}</div>

    <label for="username">Nom</label>
    {{ form_widget(formulaire.username, {'attr': {'class': 'form-control'}}) }}
    <div class="form-error">{{ form_errors(formulaire.username) }}</div>


    {{ form_end(formulaire) }}
</div>
{% endblock %}
